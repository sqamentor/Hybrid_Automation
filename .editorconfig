# ============================================================================
# EditorConfig - Consistent Coding Styles Across Editors/IDEs
# ============================================================================
# https://editorconfig.org
#
# Supported by: VS Code, PyCharm, IntelliJ, Sublime, Atom, Vim, Emacs, etc.
# ============================================================================

root = true

# ============================================================================
# ALL FILES
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================================================
# PYTHON FILES
# ============================================================================
[*.py]
indent_size = 4
max_line_length = 100

# ============================================================================
# YAML FILES
# ============================================================================
[*.{yaml,yml}]
indent_size = 2

# ============================================================================
# JSON FILES
# ============================================================================
[*.json]
indent_size = 2

# ============================================================================
# TOML FILES
# ============================================================================
[*.toml]
indent_size = 4

# ============================================================================
# MARKDOWN FILES
# ============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ============================================================================
# MAKEFILE
# ============================================================================
[Makefile]
indent_style = tab
indent_size = 4

# ============================================================================
# SHELL SCRIPTS
# ============================================================================
[*.{sh,bash}]
indent_size = 2

# ============================================================================
# HTML/CSS/JS (if applicable)
# ============================================================================
[*.{html,css,js}]
indent_size = 2

# ============================================================================
# DOCKERFILE
# ============================================================================
[Dockerfile*]
indent_size = 4

# ============================================================================
# INI FILES
# ============================================================================
[*.ini]
indent_size = 4

# ============================================================================
# SPECIFIC FILES
# ============================================================================
[{package.json,*.yml}]
indent_size = 2

[.gitignore]
insert_final_newline = false
